<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mayankgupta.calculatoralpha.MainActivity"
    android:background="#000000">

    <TextView
        android:layout_width="450dp"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/calcOut"
        android:width="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="0dp"
        android:autoText="false"
        android:background="#a4373b3c"
        android:editable="false"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:textStyle="normal|bold"
        android:textAlignment="textEnd"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:gravity="end" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:id="@+id/input9"
        android:layout_marginTop="29dp"
        android:textSize="50dp"
        android:layout_below="@+id/calcOut"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:id="@+id/input8"
        android:textSize="50dp"
        android:layout_alignTop="@+id/input9"
        android:layout_toRightOf="@+id/input9"
        android:layout_toEndOf="@+id/input9" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:id="@+id/input7"
        android:textSize="50dp"
        android:layout_alignBottom="@+id/input8"
        android:layout_toRightOf="@+id/input8"
        android:layout_toEndOf="@+id/input8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:id="@+id/input6"
        android:textSize="50dp"
        android:layout_below="@+id/input9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:id="@+id/input5"
        android:textSize="50dp"
        android:layout_alignBottom="@+id/input6"
        android:layout_toRightOf="@+id/input6"
        android:layout_toEndOf="@+id/input6" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        android:id="@+id/input4"
        android:textSize="50dp"
        android:layout_alignBottom="@+id/input5"
        android:layout_toRightOf="@+id/input5"
        android:layout_toEndOf="@+id/input5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        android:id="@+id/input3"
        android:textSize="50dp"
        android:layout_below="@+id/input6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        android:id="@+id/input2"
        android:textSize="50dp"
        android:layout_below="@+id/input5"
        android:layout_toRightOf="@+id/input3"
        android:layout_toEndOf="@+id/input3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:id="@+id/input1"
        android:textSize="50dp"
        android:layout_alignBottom="@+id/input2"
        android:layout_toRightOf="@+id/input2"
        android:layout_toEndOf="@+id/input2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="0"
        android:id="@+id/input0"
        android:textSize="50dp"
        android:layout_below="@+id/input3"
        android:layout_toRightOf="@+id/input3"
        android:layout_toEndOf="@+id/input3"
        android:layout_alignParentBottom="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="+"
        android:id="@+id/inputAdd"
        android:textSize="50dp"
        android:textColor="#FFFFFF"
        android:background="#d62a2929"
        android:layout_below="@+id/inputMinus"
        android:layout_alignLeft="@+id/inputMinus"
        android:layout_alignStart="@+id/inputMinus"
        android:layout_alignRight="@+id/inputMinus"
        android:layout_alignEnd="@+id/inputMinus"
        android:layout_alignParentBottom="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="-"
        android:id="@+id/inputMinus"
        android:textSize="50dp"
        android:textColor="#FFFFFF"
        android:background="#d62a2929"
        android:layout_below="@+id/inputMult"
        android:layout_alignLeft="@+id/inputMult"
        android:layout_alignStart="@+id/inputMult"
        android:layout_alignRight="@+id/inputMult"
        android:layout_alignEnd="@+id/inputMult" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="*"
        android:id="@+id/inputMult"
        android:textSize="50dp"
        android:layout_alignBottom="@+id/input4"
        android:textColor="#FFFFFF"
        android:background="#d62a2929"
        android:layout_alignLeft="@+id/inputDiv"
        android:layout_alignStart="@+id/inputDiv"
        android:layout_alignRight="@+id/inputDiv"
        android:layout_alignEnd="@+id/inputDiv" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="/"
        android:id="@+id/inputDiv"
        android:textSize="50dp"
        android:layout_alignBottom="@+id/input7"
        android:layout_toRightOf="@+id/input7"
        android:layout_toEndOf="@+id/input7"
        android:textColor="#FFFFFF"
        android:background="#d62a2929"
        android:layout_marginLeft="3dp"
        android:layout_alignTop="@+id/input7" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="C"
        android:id="@+id/Clear"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/input3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="="
        android:id="@+id/inputEqual"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/input0"
        android:layout_toEndOf="@+id/input0"
        android:background="#d723a42b"
        android:layout_below="@+id/input2" />

</RelativeLayout>
